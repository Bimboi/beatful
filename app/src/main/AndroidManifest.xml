<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.micah.beatful">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BeatfulPlayer.NoActionBar">
        <activity
            android:name=".ui.extras.Splash"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.account.LoginActivity"
            android:label="@string/title_activity_login" />
        <activity
            android:name=".ui.account.RegisterActivity"
            android:label="@string/title_activity_register" />
        <activity
            android:name=".HostActivity"
            android:label="@string/title_activity_host" />
        <activity
            android:name=".ui.home.BeatPlayer"
            android:label="@string/title_activity_player"
            android:theme="@style/Theme.BeatfulPlayer"/>
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>
</manifest>